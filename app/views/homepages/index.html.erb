<h4>Parents Login</h4>
<p><%= link_to "Login", login_path %></p>

<h4>Licensees Login</h4>
<p><%= link_to "Licensee Login", licensee_login_path %></p>

<h4>Teachers Login</h4>
<p><%= link_to "Teacher Login", teacher_login_path %></p>

<hr>

<div>
    <% if session[:licensee_id].present? %>
      <%= link_to "Edit Student Detail", class_details_path %>
    <% else %>
      <% nil %>
    <% end %>
</div>

<h4>Announcements</h4>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
        </tr>
    </thead>
    
    <tbody>
        <% @announcements.each do |announcement| %>
        <tr>
            <td><%= announcement.title %></td>
            <td><%= announcement.content %></td>
        </tr>
        <% end %>
    </tbody>
</table>

    

