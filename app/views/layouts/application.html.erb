<!DOCTYPE html>
<html>
  <head>
    <title>Gemini</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.0.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <a class="navbar-brand" href="/homepages">Kindergarten</a>
          
          <ul class="navbar-nav">
            <li class="nav-item active">
              Current User: <%= display_name %>
            </li>
          
            <% if current_parent.present? %>
              <li class="nav-item active">
                <%= link_to "User Profile", "#" %>
              </li>
          
              <li class="nav-item">
                <% if current_parent.present? %>
                  <%= link_to "User Logout", logout_path, data: {method: :delete} %>
                <% else %>
                  <%= link_to "User Login", login_path %>
                <% end %>
              </li>
            <% end %>

            <% if current_licensee.present? %>
              <li class="nav-item active">
                <%= link_to "Licensee Profile", "#" %>
              </li>
          
              <li class="nav-item">
                <% if current_licensee.present? %>
                  <%= link_to "Licensee Logout", licensee_logout_path, data: {method: :delete} %>
                <% else %>
                  <%= link_to "Licensee Login", licensee_login_path %>
                <% end %>
              </li>
            <% end %>
            
            <% if current_teacher.present? %>
              <li class="nav-item active">
                  <%= link_to "Teacher Profile", "#" %>
              </li>
          
              <li class="nav-item">
                <% if current_teacher.present? %>
                  <%= link_to "Teacher Logout", teacher_logout_path, data: {method: :delete} %>
                <% else %>
                  <%= link_to "Teacher Login", teacher_login_path %>
                <% end %>
              </li>
            <% end %>
         </ul>
      </nav>
    </header>
    
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <nav id="sidebar">

        <ul class="list-unstyled components">
            <li class="active">
                <a href="#">About</a>
            </li>
            
            <li>
              <a href="#announcementSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Announcements</a>
              <ul class="collapse list-unstyled" id="announcementSubmenu">
                <li><%= link_to "Announcement", homepages_path %></li>
              </ul>
            </li>
            
            <li>
              <a href="#studentSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Licensee Details</a>
              <ul class="collapse list-unstyled" id="studentSubmenu">
                <li><%= link_to "Branch Teachers", "#" %></li>
                <li><%= link_to "Add New Teacher", "#" %></li>
                <li><%= link_to "Branch Classrooms", "#" %></li>
                <li><%= link_to "Add New Classroom", "#" %></li>
                <li><%= link_to "Branch Students", "#" %></li>
                <li><%= link_to "Add New Student", "#" %></li>
                <li><%= link_to "Student Father", "#" %></li>
                <li><%= link_to "Add New Students Father", "#" %></li>
                <li><%= link_to "Student Mother", "#" %></li>
                <li><%= link_to "Add New Students Mother", "#" %></li>
              </ul>
            </li>
            
            <li>
              <a href="#studentSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Teacher Details</a>
              <ul class="collapse list-unstyled" id="studentSubmenu">
                <li><%= link_to "My Teaching Classrooms", "#" %></li>
                <li><%= link_to "My Teaching Students", "#" %></li>
              </ul>
            </li>
            
            <li>
              <a href="#parentsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Parents Details</a>
              <ul class="collapse list-unstyled" id="parentsSubmenu">
                <li><%= link_to "Students Father Profile", "#" %></li>
                <li><%= link_to "Students Mother Profile", "#" %></li>
              </ul>
            </li>
            
            <li>
              <a href="#studentSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Student Details</a>
              <ul class="collapse list-unstyled" id="studentSubmenu">
                <li><%= link_to "My Students", "#" %></li>
              </ul>
            </li>
            
            <li>
              <a href="#loginSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Login</a>
              <ul class="collapse list-unstyled" id="loginSubmenu">
                <li>
                  <% if current_licensee.present? %>
                    <%= link_to "Licensee Logout", logout_path, data: {method: :delete} %>
                  <% else %>
                    <%= link_to "Licensee Login", login_path %>
                  <% end %>
                </li>
                
                <li>
                  <% if current_teacher.present? %>
                    <%= link_to "Teacher Logout", teacher_logout_path, data: {method: :delete} %>
                  <% else %>
                    <%= link_to "Teacher Login", teacher_login_path %>
                  <% end %>
                </li>
                
                <li>
                  <% if current_parent.present? %>
                    <%= link_to "User Logout", logout_path, data: {method: :delete} %>
                  <% else %>
                    <%= link_to "User Login", login_path %>
                  <% end %>
                </li>
              </ul>
            </li>
          </nav>
        </div>
      
        <div class="col-sm-8">
          <%= yield %>
        </div>
        
        <div class="col-sm-2">
       </div>
     </div>
  </body>
  
</html>
